@model StudentiIndexViewModel;
@{
}
<div class="card">
	<div class="card-header"> Filtro studenti</div>
	<div class="card-body">
		<form method="get">
			<input class="form-control" type="text" name="Nominativo" placeholder="Nominativo" value="@Model.Filter?.Nominativo" />
			<input class="form-control" type="date" name="Da" placeholder="DateDa" />
			<input class="form-control" type="date" name="A" placeholder="DateA" />
			<button class="btn" type="submit"> <i class="fa fa-search"></i> Ricerca</button>
		</form>
	</div>
</div>
<div class="card">
	<div class="card-header">Risultati:</div>

	<div class="card-body">

		<table class="table table-striped">
			<tr>
				<th>Nome</th>
				<th>Cognome</th>
				<th>Codice fiscale</th>
				<th>Data di nascita</th>
				<th>Corso Id</th>
			</tr>
			@foreach (var item in Model.ElementiTrovati)
			{
				<tr>
					<td>@item.Nome</td>
					<td>@item.Cognome</td>
					<td>@item.CodiceFiscale</td>
					<td>@item.DataDiNascita</td>
					<td>@item.CorsoId</td>
				</tr>
			}
		</table>

	</div>
</div>